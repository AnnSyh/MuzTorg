mixin svg(name, width, height, className)
  svg(class=(className ? className : null), width=width, height=height)
    use(xlink:href=('img/sprite.svg#' + name))

mixin picture(image, format, width, height, altText, classData)
  - var comment = `1Ñ…: ${width}px; 2x: ${width * 2}px`;
  //
    #{comment}
  picture
    source(type='image/webp', srcset= 'img/webp/' + image + '@1x.webp 1x, img/webp/' + image + '@2x.webp 2x')
    source(type=`image/${format}` srcset=`img/content/${image}@1x.${format} 1x, img/content/${image}@2x.${format} 2x`)
    img(src=`img/content/${image}@1x.${format}`, width=width, height=height, alt=altText data-caption=classData)
